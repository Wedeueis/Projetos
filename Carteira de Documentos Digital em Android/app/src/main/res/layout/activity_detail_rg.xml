<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_document"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.edu.ufabc.padm.projetopadm.view.DetailDocumentActivity">

    <!-- Name document label -->
    <TextView android:id="@+id/detail_rg_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="@string/detailrg_name_label"
        android:textSize="@dimen/activity_subscript"
        android:textColor="@color/colorSubtitle"/>

    <!-- Name document -->
    <TextView android:id="@+id/detail_rg_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_detail_distance_between_subtitle_title"
        android:layout_below="@id/detail_rg_name_label"
        android:gravity="center_vertical"
        android:textSize="@dimen/activity_text_box"
        android:textColor="@color/colorTittle"
        android:textStyle="bold"/>

    <!-- Number document label -->
    <TextView android:id="@+id/detail_rg_number_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detail_rg_name"
        android:layout_marginTop="@dimen/activity_detail_distance_between_data"
        android:gravity="center_vertical"
        android:text="@string/detailrg_number_label"
        android:textSize="@dimen/activity_subscript"
        android:textColor="@color/colorSubtitle"/>

    <!-- Number document -->
    <TextView android:id="@+id/detail_rg_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detail_rg_number_label"
        android:layout_marginTop="@dimen/activity_detail_distance_between_subtitle_title"
        android:gravity="center_vertical"
        android:textSize="@dimen/activity_text_box"
        android:textColor="@color/colorTittle"
        android:textStyle="bold"/>

    <!-- Father's name document label -->
    <TextView android:id="@+id/detail_rg_father_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detail_rg_number"
        android:gravity="center_vertical"
        android:text="@string/detailrg_father_label"
        android:textSize="@dimen/activity_subscript"
        android:textColor="@color/colorSubtitle"/>

    <!-- Father's name document -->
    <TextView android:id="@+id/detail_rg_father"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_detail_distance_between_subtitle_title"
        android:layout_below="@id/detail_rg_father_label"
        android:gravity="center_vertical"
        android:textSize="@dimen/activity_text_box"
        android:textColor="@color/colorTittle"
        android:textStyle="bold"/>

    <!-- Mother's name document label -->
    <TextView android:id="@+id/detail_rg_mother_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detail_rg_father"
        android:layout_marginTop="@dimen/activity_detail_distance_between_data"
        android:gravity="center_vertical"
        android:text="@string/detailrg_mother_label"
        android:textSize="@dimen/activity_subscript"
        android:textColor="@color/colorSubtitle"/>

    <!-- Mother's name document -->
    <TextView android:id="@+id/detail_rg_mother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detail_rg_mother_label"
        android:layout_marginTop="@dimen/activity_detail_distance_between_subtitle_title"
        android:gravity="center_vertical"
        android:textSize="@dimen/activity_text_box"
        android:textColor="@color/colorTittle"
        android:textStyle="bold"/>

    <!-- Birth date document label -->
    <TextView android:id="@+id/detail_rg_birth_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detail_rg_mother"
        android:layout_marginTop="@dimen/activity_detail_distance_between_data"
        android:gravity="center_vertical"
        android:text="@string/detailrg_birth_label"
        android:textSize="@dimen/activity_subscript"
        android:textColor="@color/colorSubtitle"/>

    <!-- Birth date name document -->
    <TextView android:id="@+id/detail_rg_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detail_rg_birth_label"
        android:layout_marginTop="@dimen/activity_detail_distance_between_subtitle_title"
        android:gravity="center_vertical"
        android:textSize="@dimen/activity_text_box"
        android:textColor="@color/colorTittle"
        android:textStyle="bold"/>

    <!-- Birth place document label -->
    <TextView android:id="@+id/detail_rg_birthplace_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detail_rg_birth"
        android:layout_marginTop="@dimen/activity_detail_distance_between_data"
        android:gravity="center_vertical"
        android:text="@string/detailrg_birthplace_label"
        android:textSize="@dimen/activity_subscript"
        android:textColor="@color/colorSubtitle"/>

    <!-- Birth place name document -->
    <TextView android:id="@+id/detail_rg_birthplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detail_rg_birthplace_label"
        android:layout_marginTop="@dimen/activity_detail_distance_between_subtitle_title"
        android:gravity="center_vertical"
        android:textSize="@dimen/activity_text_box"
        android:textColor="@color/colorTittle"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/rg_image"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom = "true"
        android:adjustViewBounds="true" />

</RelativeLayout>
