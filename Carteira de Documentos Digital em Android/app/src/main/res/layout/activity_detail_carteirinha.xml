<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_document"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.edu.ufabc.padm.projetopadm.view.DetailDocumentActivity">

    <!-- Name document label -->
    <TextView android:id="@+id/detail_carteirinha_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="@string/detailcarteirinha_name_label"
        android:textSize="@dimen/activity_subscript"
        android:textColor="@color/colorSubtitle"/>

    <!-- Name document -->
    <TextView android:id="@+id/detail_carteirinha_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_detail_distance_between_subtitle_title"
        android:layout_below="@id/detail_carteirinha_name_label"
        android:gravity="center_vertical"
        android:textSize="@dimen/activity_text_box"
        android:textColor="@color/colorTittle"
        android:textStyle="bold"/>

    <!-- Course label -->
    <TextView android:id="@+id/detail_carteirinha_course_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detail_carteirinha_name"
        android:gravity="center_vertical"
        android:text="@string/detailcarteirinha_course_label"
        android:textSize="@dimen/activity_subscript"
        android:textColor="@color/colorSubtitle"/>

    <!-- Course document -->
    <TextView android:id="@+id/detail_carteirinha_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_detail_distance_between_subtitle_title"
        android:layout_below="@id/detail_carteirinha_course_label"
        android:gravity="center_vertical"
        android:textSize="@dimen/activity_text_box"
        android:textColor="@color/colorTittle"
        android:textStyle="bold"/>

    <!-- Number document label -->
    <TextView android:id="@+id/detail_carteirinha_number_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detail_carteirinha_course"
        android:layout_marginTop="@dimen/activity_detail_distance_between_data"
        android:gravity="center_vertical"
        android:text="@string/detailcarteirinha_number_label"
        android:textSize="@dimen/activity_subscript"
        android:textColor="@color/colorSubtitle"/>

    <!-- Number document -->
    <TextView android:id="@+id/detail_carteirinha_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detail_carteirinha_number_label"
        android:layout_marginTop="@dimen/activity_detail_distance_between_subtitle_title"
        android:gravity="center_vertical"
        android:textSize="@dimen/activity_text_box"
        android:textColor="@color/colorTittle"
        android:textStyle="bold"/>

    <!-- University label -->
    <TextView android:id="@+id/detail_carteirinha_university_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detail_carteirinha_number"
        android:layout_marginTop="@dimen/activity_detail_distance_between_data"
        android:gravity="center_vertical"
        android:text="@string/detailcarteirinha_university_label"
        android:textSize="@dimen/activity_subscript"
        android:textColor="@color/colorSubtitle"/>

    <!-- University document -->
    <TextView android:id="@+id/detail_carteirinha_university"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detail_carteirinha_university_label"
        android:layout_marginTop="@dimen/activity_detail_distance_between_subtitle_title"
        android:gravity="center_vertical"
        android:textSize="@dimen/activity_text_box"
        android:textColor="@color/colorTittle"
        android:textStyle="bold"/>

    <!-- Validity label -->
    <TextView android:id="@+id/detail_carteirinha_validity_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detail_carteirinha_university"
        android:layout_marginTop="@dimen/activity_detail_distance_between_data"
        android:gravity="center_vertical"
        android:text="@string/detailcarteirinha_validity_label"
        android:textSize="@dimen/activity_subscript"
        android:textColor="@color/colorSubtitle"/>

    <!-- Validity document -->
    <TextView android:id="@+id/detail_carteirinha_validity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detail_carteirinha_validity_label"
        android:layout_marginTop="@dimen/activity_detail_distance_between_subtitle_title"
        android:gravity="center_vertical"
        android:textSize="@dimen/activity_text_box"
        android:textColor="@color/colorTittle"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/carteirinha_image"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom = "true"
        android:adjustViewBounds="true" />

</RelativeLayout>
